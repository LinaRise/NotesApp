<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="true">
    <shape>
        <solid android:color="#04d9c4"/>
        <stroke android:color="#03b39a"
                android:width="2dp"/>
        <corners android:radius="55dp"/>
        <padding android:right="8dp"
                 android:left="8dp"
                 android:bottom="8dp"
                 android:top="8dp"/>

    </shape>
</item>

    <item>
        <shape>
            <gradient android:startColor="#01edd6"/>
            <solid android:color="#02ceba"/>
            <stroke android:color="#53933f"
                    android:width="2dp"/>
            <corners android:radius="55dp"/>
            <padding android:right="8dp"
                     android:left="8dp"
                     android:bottom="8dp"
                     android:top="8dp"/>

        </shape>
    </item>
</selector>